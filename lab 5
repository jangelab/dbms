CREATE TABLE person
(
	ssn varchar2(20),	
	name varchar2(20),
	address varchar2(20),
	constraint person_pk PRIMARY KEY(ssn)
);

CREATE TABLE dog
(
	person_ssn varchar2(20),	
	dname varchar2(20),
	sex varchar2(10),
	dop date,
	constraint dog_fk FOREIGN KEY(person_ssn) REFERENCES person(ssn)
);

INSERT INTO person VALUES ('&ssn','&name','&address');

INSERT INTO dog VALUES ('&person_ssn','&dname','&sex','&dop');

SELECT * FROM person;

SELECT * FROM dog;

SELECT p.ssn,p.name,d.dname,d.sex
FROM person p,dog d
WHERE p.ssn=d.person_ssn AND p.name='jk';

SELECT p.ssn,p.name
FROM person p
WHERE NOT EXISTS (SELECT * FROM dog d 
			WHERE d.person_ssn=p.ssn); 

SELECT p.ssn,p.name
FROM person p
WHERE p.ssn NOT IN (SELECT d.person_ssn FROM dog d); 

