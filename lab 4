CREATE TABLE owner
(
	ssn varchar2(20),	
	name varchar2(20),
	address varchar2(20),
	constraint owner_pk PRIMARY KEY(ssn)
);

CREATE TABLE car
(
	owner_ssn varchar2(20),	
	reg_no varchar2(20),
	model varchar2(20),
	color varchar2(20),
	dop date,
	constraint fk FOREIGN KEY(owner_ssn) REFERENCES owner(ssn) NOT NULL
);

INSERT INTO owner VALUES ('&ssn','&name','&address');

INSERT INTO car VALUES ('&owner_ssn','&reg_no','&model','&color','&dop');

SELECT * FROM owner;

SELECT * FROM car;

SELECT o.ssn,o.name,c.reg_no,c.model
FROM owner o,car c
WHERE o.ssn=c.owner_ssn AND c.dop='11-NOV-11';

SELECT o.name,c.owner_ssn,count(c.owner_ssn)
FROM owner o,car c
WHERE o.ssn=c.owner_ssn
GROUP BY o.name,c.owner_ssn
HAVING COUNT(c.owner_ssn)>=ALL(SELECT COUNT(m.owner_ssn) FROM car m GROUP BY m.owner_ssn);


